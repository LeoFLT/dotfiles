bindsym $mod+r mode "resize"

# gaps
for_window [class=".*"] border pixel 0 
gaps inner 7
gaps outer 0
smart_borders on
smart_borders no_gaps
border_radius 3

#################################################################################################################################
######################################################### Miscellaneous #########################################################
#################################################################################################################################

Focus_follows_mouse off
new_window pixel 0 

# wallpaper
exec_always --no-startup-id feh --bg-scale /home/leoflt/.config/i3/wallpaper.jpg

